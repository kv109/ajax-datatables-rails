<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title, class: 'control-label' %>
    <%= form.text_field :title, id: :post_title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :content, class: 'control-label' %>
    <%= form.text_area :content, id: :post_content, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :user_id, class: 'control-label' %>
    <%= form.collection_select :user_id, User.all, :id, :to_s, {}, id: :post_user_id, class: 'form-control' %>
  </div>

  <div class="actions form-group">
    <%= form.submit %>
  </div>
<% end %>
